conky.config = {
    alignment = 'top_right',
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,
	default_color = 'grey',
    default_outline_color = 'black',
    default_shade_color = 'black',
	double_buffer = true,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = true,		--chans:%s@mail.google.com/mail/feed/atomged
    use_xft = true,
    font = 'DejaVu Sans Mono:size=12',
    gap_x = 10,
    gap_y = 40,
    minimum_height = 5,
	minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'override',	-- try override, desktop
	--own_window_transparent = yes,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false
}

conky.text = [[
${alignc}$nodename - $sysname $kernel on $machine
${hr 1 }
Up: $uptime  ${alignr}Load: $loadavg

Battery: ${battery BAT0}: $alignr${battery_time BAT0}
${battery_bar BAT0}

CPU: ${cpu cpu0}% ${alignr}${exec sensors coretemp-isa-0000 | head -n 3 | tail -n 1 | cut -d" " -f5}
GPU: ${exec nvidia-smi -q | grep Gpu | cut -b 44-48} ${alignr}${exec nvidia-smi -q | grep "GPU Current Temp" | cut -b45-46}ÂºC${alignr}

RAM ${alignr}$mem / $memmax ($memperc%)

/: $alignr ${fs_used /} / ${fs_size /} ($alignr${fs_free_perc /}%)
/home: $alignr ${fs_used /home/} / ${fs_size /home} ($alignr${fs_free_perc /home}%)
80G: $alignr ${fs_used /home/h/80G} / ${fs_size /home/h/80G} ($alignr${fs_free_perc /home/h/80G}%)
${if_mounted /mnt/disk}/mnt/disk: $alignr ${fs_used /mnt/disk} / ${fs_size /mnt/disk} ($alignr${fs_free_perc /mnt/disk}%)
${fs_bar 4 /mnt/disk} ${endif}

Down ${downspeed enp59s0} k/s ${alignr}Up ${upspeed enp59s0} k/s
${downspeedgraph enp59s0 10,107} ${alignr}${upspeedgraph enp59s0 10,107}

Total ${totaldown enp59s0} ${alignr}Total ${totalup enp59s0}

Down ${downspeed wlp0s20f3} k/s ${alignr}Up ${upspeed wlp0s20f3} k/s
${downspeedgraph wlp0s20f3 10,107} ${alignr}${upspeedgraph wlp0s20f3 10,107}

Total ${totaldown wlp0s20f3} ${alignr}Total ${totalup wlp0s20f3 }

${exec task limit:3}

add: cpu freq, weather, see acpitemp
]]
